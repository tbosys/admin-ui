{
  "key": "orden",
  "api": "crm",
  "title": "Orden",
  "table": ["id", "clienteId", "ownerId", "monto", "fecha", "recibo", "consecutivo"],
  "sections": [
    {
      "title": "main",
      "widths": [12, 6, 3],
      "columns": ["clienteId", "monto", "recibo", "fecha"]
    },

    {
      "title": "lineas",
      "columns": ["ordenLinea"],
      "widths": [12, 12, 12]
    },
    {
      "title": "other",
      "columns": ["formaPago", "referencia", "moneda", "tipoCambio"],
      "widths": [12, 6, 3]
    }
  ],
  "properties": {
    "id": {},
    "tipo": {
      "type": "string",
      "title": "Tipo",
      "filter": "select",
      "render": "select",
      "default": "pedido",
      "enum": ["pedido", "proforma"]
    },
    "especial": {
      "title": "Especial",
      "filter": "boolean",
      "render": "boolean"
    },
    "name": {
      "helpText": "numero de orden del cliente"
    },

    "plazo": {
      "helpText": "plazo de credito del documento",
      "default": 0
    },
    "total": {},
    "negociado": {
      "title": "Negociado",
      "default": false,
      "filter": "boolean",
      "render": "boolean",
      "sortable": true
    },
    "excentoTipo": {
      "title": "Tipo",
      "render": "select",
      "enum": ["01", "02", "03", "04", "05", "99"]
    },
    "excentoNumero": {
      "title": "Numero"
    },
    "excentoInstitucion": {
      "title": "Institucion"
    },
    "excentoFecha": {
      "title": "Fecha",
      "element": "date"
    },
    "excentoPorcentaje": {
      "title": "Porcentaje"
    },
    "promocionId": {
      "title": "Promocion"
    },
    "clienteId": {
      "width": 300,
      "path": "crm/cliente"
    },
    "transporteId": { "path": "crm/transporte" },
    "fecha": {},
    "fechaEntrega": {
      "extends": "fecha",
      "helpText": "la fecha pactada de entrega"
    },
    "zonaId": { "path": "crm/zona" },
    "ownerId": { "path": "crm/owner" },
    "createdBy": {},
    "moneda": {},
    "pdf": {
      "title": "PDF",
      "render": "link"
    },

    "ordenTags": {
      "title": "Tags",
      "render": "multiselect",
      "filter": "multiselect",
      "sort": true,
      "width": 200
    },
    "tipoCambio": {
      "title": "tipoCambio",
      "default": 1
    },
    "updatedBy": {},
    "createdAt": {},
    "updatedAt": {}
  }
}
